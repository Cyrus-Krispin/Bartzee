</head>

<body>
    <%- include('partials/header', {user: user, count: count, search: null, msg: msg}); %>
        <% for(var i in user) { %>
        <div id="form_wrapper">
            
            <div class="form_left">
                <div class="row">
                    <div class="circle">
                        <% if(user[i].image) { %>
                            <img class="profile-pic" src="data:image/<%= user[i].image.contentType%>;base64,
                                <%=user[i].image.data.toString('base64')%>">

                            <% } else { %>
                                <img class="profile-pic"
                                    src="https://t3.ftcdn.net/jpg/03/46/83/96/360_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg">

                                <% } %>
                    </div>
                </div>
                <br>

                <form method="post" id="profilePicture" enctype="multipart/form-data">

                    <div class="input-group">
                        <input type="file" class="form-control" id="image" name="image" accept="image/*"
                            aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                        <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04"><i
                                class="fa fa-camera upload-button"></i>&nbsp;Upload</button>
                    </div>
                </form>



            </div>
            <div class="form_right">

                <br><br>
                <div class="profile-main">
                    <label class="profile-labels">Name</label>
                    <p class="profile-data">
                        <%= user[i].name %>
                    </p>
                    <br>
                    <label class="profile-labels">Contact Number</label>
                    <p class="profile-data">
                        <%= user[i].phone %>
                    </p>
                    <br>
                    <label class="profile-labels">Contact Email</label>
                    <p class="profile-data">
                        <%= user[i].email %>
                    </p>
                    <br>
                    <label class="profile-labels">Organization</label>
                    <p class="profile-data">
                        <%= user[i].organization %>
                    </p>
                    <br>
                    <label class="profile-labels">Date on which account was created</label>
                    <p class="profile-data">
                        <%= user[i].date %>
                    </p>
                    <br>
                </div>
                <br>
                <div style="text-align: center;">
                    <a href="/updateProfile"><button type="button"
                            class="btn btn-outline-primary btn-lg">Edit</button></a>
                    <a href="/deleteUser"><button type="button"
                            class="btn btn-outline-primary btn-lg">Delete</button></a>
                    <a href="/"><button type="button" class="btn btn-outline-primary btn-lg">Home</button></a>
                </div>
            </div>



        </div>
        <% } %>


        <script>



            window.onload = function () {
                const form = document.getElementById("profilePicture")
            }
            form.addEventListener("submit", updateProfileImage)

            async function updateProfileImage(event) {
                event.preventDefault()
                const image = document.getElementById('image').value
