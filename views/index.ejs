<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/boots1trap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="stylesheet" href="../css/dropdown.css">
    <link rel="stylesheet" href="../css/home.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css"
        href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Bartzee</title>
</head>


<body onload="myFunction()">

    <!-- Loader in the start -->
    <div id="loader"></div>

    <!-- Top Navigation Bar if user is not logged in-->
    <div class="container" id="div-main">
        <div class="logo">
            <a class="navbar-brand mt-2" href="/"><img src="../orbitalLogo.png" style="width:200px;height:60px;"></a>
        </div>


        <div class="box">
            <i class="fa fa-search" aria-hidden="true"></i>
            <input type="text" name="">
        </div>


        <div class="header-buttons">
            <button class="btn btn-outline-warning btn-lg" type="button" style="width: 30%;"><i
                    class="fa fa-shopping-cart"></i>&nbsp;&nbsp;Cart</button>


            <a href="/login"><button class="btn btn-outline-secondary btn-lg" type="button" style="width: 30%;"><i
                        class="fa fa-sign-in"></i>&nbsp;&nbsp;Login</button></a>
        </div>

    </div>


    <!-- Menu Bar -->

    <nav class="navbar bg-light">
        <form class="container-fluid justify-content-start">
            <div class="dropdown">
                <button class="dropbtn"><i class="fa fa-bars" aria-hidden="true"></i>&nbsp;&nbsp;Menu</button>
                <div class="dropdown-content">
                    <a href="/">Home</a>
                    <a href="/productReg">Sell your item</a>
                    <a href="/">About Us</a>
                </div>
            </div>

        </form>
    </nav>

    <!-- Main Body -->
    <div class="container-main">
        <div class="row">
            <div class="card-deck">
                <% for (var i in product) { %>

                    <div class="card" style="height: 600px; width: 20rem;">
                        <img src="data:image/<%= product[i].image.contentType%>;base64,
                    <%=product[i].image.data.toString('base64')%>" style="height:300px;" class="card-img-top"
                            alt="...">
                        <div class="card-body">
                            <h6 class="prdType">
                                <%= product[i].productType%>
                            </h6>
                            <h4 class="prdName"><b>
                                    <%= product[i].productName%>
                                </b></h4>
                            <p class="prdDesc">
                                <%= product[i].productDesc%>
                            </p>
                            <p><i class="fa fa-map-marker" aria-hidden="true"></i>&nbsp;
                                <%= product[i].organization %><br>
                            </p>

                            <h4><b>$&nbsp;<%= product[i].productPrice%></b></h4>
                            <hr>
                            <a href="/review/<%= product[i]._id %>" class="btn btn-outline-warning stretched-link"><i
                                    class="fa fa-eye" aria-hidden="true"></i>
                                &nbsp; View</a>

                        </div>
                    </div>

                    <% } %>
            </div>

        </div>
    </div>



    <!-- Footer -->
    <footer class="w3-container w3-padding-64 w3-center w3-opacity w3-light-grey w3-xlarge" id="footer">
        <i class="fa fa-facebook-official w3-hover-opacity"></i>
        <i class="fa fa-instagram w3-hover-opacity"></i>
        <i class="fa fa-twitter w3-hover-opacity"></i>
        <i class="fa fa-linkedin w3-hover-opacity"></i>
    </footer>


    <script src="../jq/jquery.js" type="text/javascript"></script>
    <script src="../js/bootstrap.js" type="text/javascript"></script>

    <script>
        var myVar;

        function myFunction() {
            myVar = setTimeout(showPage, 1000);
        }

        function showPage() {
            document.getElementById("loader").style.display = "none";
            document.getElementById("div-main").style.display = "block";
        }
    </script>

</body>

</html>